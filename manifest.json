{
  "name": "Online Notifier",
  "version": "2.1.0",
  "manifest_version": 2,
  "offline_enabled": false,
	
  "description": "Nyheter, kontorstatus, sanntidsbuss, kaffeabonnement, middagsmeny og mer.",
  "homepage_url": "https://online.ntnu.no/",
  
  "options_page": "options.html",
	"background": {
		"page": "background.html"
	},

  "browser_action": {
    "default_icon": "img/icon-default.png",
    "default_title": "Notifier",
    "default_popup": "popup.html"
  },

  "icons": {
    "16" : "img/logo-16.png",
    "48" : "img/logo-48.png",
    "128" : "img/logo-128.png"
  },
	
  "permissions": [
    "notifications",

    "*://*.sit.no/*",
    "*://*.visuweb.no/*",
    
    "*://*.bergstud.no/*",
    "*://*.emilweb.no/*",
    "*://*.industrielldesign.com/*",
    "*://*.online.ntnu.no/*",
    "x://*.org.ntnu.no/delta/*",
    "*://*.nabla.no/*",
    "*://*.spanskroret.no/*",
    "x://*.org.ntnu.no/volvox/*",

    "*://*.dionysosntnu.wordpress.com/*",
    "*://*.erudiontnu.org/*",
    "*://*.geolf.org/*",
    "*://*.gengangere.no/*",
    "*://*.jumpcutdragvoll.wordpress.com/*",
    "*://*.ludimus.org/*",
    "*://*.primetime.trondheim.no/*",
    "*://*.sturm.ntnu.no/*",
    
    "*://*.fraktur.no/*",
    "*://*.kjemiogmaterial.wordpress.com/*",
    "*://*.logistikkstudentene.no/*",
    "*://*.tihlde.org/*",
    "*://*.bygging.no/*",
    "*://*.tjsf.no/*",
    
    "*://*.dusken.no/*",
    "*://*.universitetsavisa.no/*",
    
    "*://*.samfundet.no/*",
    
    "*://*.velferdstinget.no/*"
    "*://*.studenttinget.no/*",
    "*://*.studentparlamentet.com/*",
    
    "*://*.retriever-info.com/*",
    "*://*.ntnu.no/blogger/rektoratet/*",
    "*://*.hist.no/*",
    "*://*.dmmh.no/*",
  ],

	"content_scripts": [
    {
      "matches": ["*://*.online.ntnu.no/*", "*://*.sit.no/*" ],
      "js": ["libs/jquery-1.9.1.min.js", "includes/on_website.js"]
    }
  ],

  "web_accessible_resources": [
    "options.html",
    "img/logo-48.png"
  ],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://apis.google.com; object-src 'self'"
}






